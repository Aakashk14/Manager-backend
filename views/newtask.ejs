            .form{
                margin: 10px;
                background-color: rgb(154, 168, 193);
                position:absolute;
                top:2px;
                box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);

               
            }
            .form input[type=text],textarea{
                
                display: inline-block;
                margin: 10px;
                resize: none;
                outline: none;
                border-radius: 4px;
            }
            .form input[type=text],select,input[type=file]{
                width: 600px;
                height: 40px;
                position: relative;
                left:1px;
                border-radius: 4px;
            }
            .form input[type=file],select,input[type=submit]{
                position: relative;
                left:10px;
                outline: none;
                margin: 4px;
                border-radius: 4px;

            }
            input[type=submit]{
                width: 200px;
                height: 50px;
                position: relative;
                left:30%;
                margin: 20px;
                font-family: Verdana, Geneva, Tahoma, sans-serif;
            }
            .header #static,#list{
                display: inline-block;
                position: relative;
                margin: 10px;
                bottom:4px;
                border: 2px solid;
                border-radius: 4px;
                font-family: Verdana, Geneva, Tahoma, sans-serif;
                background-color: rgb(197, 211, 211);
            }

        </Style>
