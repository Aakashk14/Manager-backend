    <body>
        <div class="header">
            <p id="static" onclick="location.href='/home'">Home</p>

            <p id="static" onclick="location.href='/my/profile'">My Profile</p>
            <p id="static" onclick="location.href='/logout'">Logout</p>
            <p id="list" onclick="location.href='/chat/'">Chat</p>

            <% if(level==1) {%>
                <p id="static" onclick="location.href='/settings'">Settings</p>
            <%}%>
           

        </div>
        <div class="sidebar">
            <p active="true">Tasks</p>
            <p>Events</p>
        
        </div>
        <div class="container">
            <div class="form">
              <form method="post" action="/task/create" enctype="multipart/form-data">
            <input type="text" name="name" placeholder="Title">
            <textarea cols="79" rows="20" name="details"></textarea>
            <input type="file" name="file" value="Attachment">
            <input type="hidden" name="token" value="<%=token %>">

            <select name="agent">
                <% if(data!=0) {%>
                <% for(let i=0;i<data.length;i++) { %>
                    <option value="<%=data[i].userid %>"><%=data[i].email %></option>
                <%} %>
               <% }else{ %>
                <option value="me">me</option>
               <%}%>
            </select>
            <input type="submit" value="Create task">
            </form>

        </div>
        </div>
