<html>
    <head>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <style>
            body{
                margin:0;
                background-color: rgb(193, 221, 193);
            }
            .header{
                position: sticky;
                background-color: rgb(67, 67, 162);
                height: 70px;
            }
            .static{
                background-color: red;
                width: 300px;
            }
            .buttons{
                position: relative;
                left:1200px;
                width: 300px;
                height: 60px;
                bottom:30px;
            }
            .buttons input{
                width: 100px;
                height: 40px;
                border-radius: 10px;
                margin: 10px;
                background-color: white;
                font-family: Verdana, Geneva, Tahoma, sans-serif;
            }

            .signup_form{
                width: 700px;
                background-color: white;
                position: relative;
                left:400px;
                top:150px;
                height: 500px;
                box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
            }
            .signup_form input{
                display: block;
                padding: 10px;
                position: relative;
                top:100px;
                margin: 10px;
                left:50px;
                width: 500px;
            }
         
            .signup_form input[type=button],input[type=submit]{
                position: relative;
                top:140px;
            }
            .signup_form p{
                position: relative;
                top:30px;
                left:150px;
            }
          
            .signup_form{
                position: relative;
                top:40px;
            }
        </style>
    </head>
    <script>
        $(()=>{
            $("#btn_sign").on("click",()=>{
                $(".login_form").show()
            })
            $(".signup_form input[type=button],.login_form input[type=button]").on('click',function(){
                
                if($(".login_form").css("display")=="none"){
                    $(".login_form").show()
                    $(".signup_form").css("display","none")
                }else{
                    $(".signup_form").show()
                    $(".login_form").css("display","none")
                }
            })
            

        })
       
    </script>
    <body>

        <div class="header">
            <div class="static">
            </div>
           
        </div>

      
       

        <div class="container">

            <div class="signup_form">
                <p> Update Details Since its your first login</p>
                <form method="post" action="/update/user">
                    <input type="text" name="name" placeholder="Name">
                    <input type="password" name="password" placeholder="password">
                    <input type="submit" value="Update">
                    
                </form>
        
    </div>
         
        </body>
</html>